<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Free Food India</title>
    <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
    <link rel="stylesheet" href="css/style.css">
    <link rel="icon" href="favicon/favicon.ico">
  </head>
  <body>

    <header>
      <nav class="navbar fixed-top navbar-expand-lg navbar-light bg">
        <div class="container">
          <i class="fas fa-utensils fa-3x home-icon-2"></i>
          <h1 class="tagname-2">Free Food India</h1>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="btn btn-outline-danger btn-lg" style="color:#fff !important;margin-right:5px" href="/index" role="button">Home</a>
              </li>
              <li class="nav-item">
                <a class="btn btn-outline-danger btn-lg" style="color:#fff !important;margin-right:5px" href="/donatefood" role="button">Donate</a>
              </li>
              <li class="nav-item">
                <a class="btn btn-outline-danger btn-lg" style="color:#fff !important;margin-right:5px" href="/food" role="button">Take</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>


    <% for(let i=0;i<ejsfirstname.length;i++){ %>

    <div class="container">

    <div class="jumbotron">
      <form action="/take" method="post">
  <h1 class="display-4">Order Food</h1>
  <hr class="my-4">
  <p class="lead">Name:   <%= ejsfirstname[i].firstname %> <%= ejslastname[i].lastname %></p>
  <hr class="my-4">
  <p class="lead">Email:   <%= ejsemail[i].email %> </p>
  <hr class="my-4">
  <p class="lead">Mobile No.:   <%= ejsphoneno[i].phoneno %> </p>
  <hr class="my-4">
  <p class="lead">Address:   <%= ejsaddresse[i].addresse %> </p>
  <hr class="my-4">
  <p class="lead">City:   <%= ejscity[i].city %> </p>
  <hr class="my-4">
  <p class="lead">State:   <%= ejsstate[i].state %> </p>
  <hr class="my-4">
  <p class="lead">Zip:   <%= ejszip[i].zip %> </p>
  <hr class="my-4">
  <!-- <p class="lead">Order Status:   <%= ejsorderstatus[i].orderstatus %> </p>
  <hr class="my-4">
  <p class="lead">Food requester name:   <%= ejsrequestername[i].requestername %> </p>
  <hr class="my-4"> -->
  <button class="btn btn-primary btn-lg" type="submit" name="button1">Order</button>
  <hr class="my-4">
  </form>
  <form action="/delete3" method="post">

    <button class="btn btn-danger btn-lg" type="submit" value="<%=ejsfirstname[i]._id%>" name="button">Delete</button>
  </form>
</div>
</div>
<% } %>
  </body>
</html>
